<p id="notice"><%= notice %></p>

<h1>Listing Attractions</h1>

<div class="table-responsive">
  <table id="vehicle_table" class="table table-striped table-bordered table-hover table-condensed table-responsive">
		<thead>
			<tr>
				<th>Name</th>
				<th>Address</th>
				<th>Lat</th>
				<th>Long</th>
				<th>City</th>
				<th>Category</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @attractions.each do |attraction| %>
				<tr>
					<td><%= attraction.name %></td>
					<td><%= attraction.address %></td>
					<td><%= attraction.lat %></td>
					<td><%= attraction.long %></td>
  				<td><%= City.find(attraction.city_id).name if attraction.city_id %></td>
					<td><%= attraction.category %></td>
					<td><%= link_to 'Show', attraction %></td>
					<td><%= link_to 'Edit', edit_attraction_path(attraction) %></td>
					<td><%= link_to 'Destroy', attraction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
  </table>
</div>

<br>

